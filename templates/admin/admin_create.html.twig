{% extends 'base.html.twig' %}

{% block title %}Mon Blog symfony | Gestion des articles{% endblock %}



{% block body %}

<h1 class="display-4 text-center my-4">Back office | 
 {% if editMode %}
    Modification Article
 {% else %}
    Création Article
 {% endif %}

<small><a href="{{ path('admin_articles') }}" alt="" class="btn btn-primary">Retour</a></small></h1>



{{ form_start(formArticle) }}

     {{ form_row(formArticle.title, {'attr': {'placeholder': 'Titre de l\'article'}, 'label': "Titre de l\'article" }) }}
     {{ form_row(formArticle.category, {'label': "Catégorie"}) }}
    {{ form_row(formArticle.content, {'label': "Contenu de l\'article"}) }}
    {{ form_row(formArticle.image, {'attr': {'placeholder': 'Url de l\'image'} }) }}
   
    {% if editMode %}

        <button type="submit" class="btn btn-secondary">Modifier l'article</button>
    {% else %}

        <button type="submit" class="btn btn-secondary">Enregistrer l'article</button>
        
   {% endif %}


{{ form_end(formArticle) }}

{% endblock %}